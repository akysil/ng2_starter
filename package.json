{
    "name": "ng2_starter",
    "version": "0.0.9",
    "description": "ng2 + aot builder + karma and protractor as testers",
    "scripts": {
        "clean": "rimraf dist && rimraf aot",
        "coverage": "webpack-dev-server --content-base coverage/ --port 9875 --open --colors",
        "build": "npm run clean && npm run ngc && npm run rollup && cp src/index.html dist/index.html",
        "dev": "webpack-dev-server --config config/webpack.js --progress --inline",
        "e2e": "protractor ./config/protractor.js || exit 0",
        "ngc": "ngc -p ngcconfig.json",
        "pree2e": "webdriver-manager update --standalone false --gecko false",
        "prod": "npm run build && webpack-dev-server --content-base dist --open",
        "rollup": "rollup -c config/rollup.js",
        "start": "npm run clean && npm run dev",
        "test": "karma start config/karma.js --port 9876 || exit 0"
    },
    "bin": {
        "ngc": "node_modules/.bin/ngc",
        "rollup": "node_modules/.bin/rollup"
    },
    "author": "Alex Kysil",
    "license": "MIT",
    "dependencies": {
        "@angular/common": "~2.4.1",
        "@angular/compiler": "~2.4.1",
        "@angular/compiler-cli": "^2.4.1",
        "@angular/core": "~2.4.1",
        "@angular/forms": "~2.4.1",
        "@angular/http": "~2.4.1",
        "@angular/platform-browser": "~2.4.1",
        "@angular/platform-browser-dynamic": "~2.4.1",
        "@angular/platform-server": "^2.4.1",
        "@angular/router": "~3.4.1",
        "es6-shim": "^0.35.2",
        "reflect-metadata": "^0.1.9",
        "rxjs": "5.0.1",
        "zone.js": "^0.7.4"
    },
    "devDependencies": {
        "@types/jasmine": "^2.5.35",
        "@types/karma": "^0.13.33",
        "@types/node": "^6.0.45",
        "angular2-template-loader": "^0.4.0",
        "awesome-typescript-loader": "^3.0.0-beta.18",
        "css-loader": "^0.23.1",
        "core-js": "^2.4.1",
        "extract-text-webpack-plugin": "^1.0.1",
        "file-loader": "^0.8.5",
        "html-loader": "^0.4.3",
        "html-webpack-plugin": "^2.15.0",
        "istanbul-instrumenter-loader": "^1.2.0",
        "jasmine-core": "^2.4.1",
        "jasmine-spec-reporter": "^2.7.0",
        "karma": "^1.3.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^1.0.2",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-remap-coverage": "^0.1.4",
        "karma-simple-reporter": "^2.0.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^1.8.0",
        "null-loader": "^0.1.1",
        "phantomjs-prebuilt": "^2.1.7",
        "protractor": "^4.0.14",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.5.2",
        "rollup": "^0.38.1",
        "rollup-plugin-commonjs": "^6.0.1",
        "rollup-plugin-filesize": "^1.0.1",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-scss": "^0.2.0",
        "rollup-plugin-uglify": "^1.0.1",
        "style-loader": "^0.13.1",
        "ts-node": "^1.7.2",
        "typescript": "^2.1.4",
        "webpack": "^1.13.0",
        "webpack-dev-server": "^1.14.1",
        "webpack-merge": "^0.14.0"
    }
}
